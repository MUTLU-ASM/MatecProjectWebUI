@model EntityLayer.Concrete.UnitType
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mx-6 my-6">
    <div class="card-header pb-0">
        <h5>Yeni Birim Cinsi Ekleme Sayfası</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <form method="post">
                <input type="hidden" class="form-control border" asp-for="UnitTypeId" readonly></input>
                <br />
                <label>Birim Cinsi</label>
                <input type="text" class="form-control border" asp-for="Name"></input>
                <br />
                <button class="btn btn-info"><i class="fa-regular fa-floppy-disk"></i>&nbsp;&nbsp; Kaydet</button>
                <a href="/UnitType/Index" class="btn btn-primary float-right">Vazgeç</a>
            </form>
        </div>
    </div>
</div>