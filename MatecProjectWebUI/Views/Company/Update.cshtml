@model EntityLayer.Concrete.Company
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mx-6 my-6">
    <div class="card-header pb-0">
        <h5>Firma Güncelleme Sayfası</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <form method="post">
                <input type="hidden" class="form-control border" asp-for="CompanyId" readonly>
                <label>Firma Adı</label>
                <input type="text" class="form-control border" asp-for="Name">
                <br />
                <button class="btn btn-info"><i class="fa-solid fa-rotate"></i>&nbsp;&nbsp; Güncelle</button>
                <a href="/Company/Index" class="btn btn-primary float-right">Vazgeç</a>
            </form>
        </div>
    </div>
</div>