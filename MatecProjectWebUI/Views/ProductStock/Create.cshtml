@model EntityLayer.Concrete.ProductStock
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mx-6 my-6">
    <div class="card-header pb-0">
        <h5>Yeni Ürün Stok Giriş Sayfası</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <form method="post">
                <input type="hidden" class="form-control border" asp-for="ProductStockId" readonly>
                <br />
                <label>Ürün Kodu</label>
                <select asp-for="ProductId" class="form-control" asp-items="@ViewBag.productList"></select>
                <br />
                <label>Birim Cinsi</label>
                <select asp-for="UnitTypeId" class="form-control" asp-items="@ViewBag.unitTypeList"></select>
                <br />
                <label>Stok</label>
                <input type="text" class="form-control border" asp-for="Stock">
                <br />
                <button class="btn btn-info"><i class="fa-regular fa-floppy-disk"></i>&nbsp;&nbsp; Kaydet</button>
                <a href="/ProductStock/Index" class="btn btn-primary float-right">Vazgeç</a>
            </form>
        </div>
    </div>
</div>