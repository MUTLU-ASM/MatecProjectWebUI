@model EntityLayer.Concrete.ProductPrice
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mx-6 my-6">
    <div class="card-header pb-0">
        <h5>Ürün Fiyatı Güncelleme Sayfası</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <form method="post">
                <input type="hidden" class="form-control border" asp-for="ProductPriceId" readonly>
                <label>Ürün Kodu</label>
                <select asp-for="ProductId" class="form-control" asp-items="@ViewBag.productList"></select>
                <br />
                <label>Birim</label>
                <select asp-for="UnitTypeId" class="form-control" asp-items="@ViewBag.unitTypeList"></select>
                <br />
                <label>Fiyat</label>
                <input type="text" class="form-control border" asp-for="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
                <br />
                <label>Geçerlilik Tarihi</label>
                <input type="date" class="form-control border" asp-for="ValidityDate">
                <span asp-validation-for="ValidityDate" class="text-danger"></span>
                <br />
                <button class="btn btn-info"><i class="fa-solid fa-rotate"></i>&nbsp;&nbsp; Güncelle</button>
                <a href="/ProductPrice/Index" class="btn btn-primary float-right">Vazgeç</a>
            </form>
        </div>
    </div>
</div>